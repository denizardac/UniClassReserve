@page
@model UniClassReserve.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ResultMessage))
        {
            <div class="alert alert-info">
                @Html.Raw(Model.ResultMessage)
            </div>
        }
        <div class="alert alert-secondary mb-2">
            <b>Password Rules:</b>
            <ul class="mb-0">
                <li>At least 6 characters</li>
                <li>At least 1 uppercase letter</li>
                <li>At least 1 lowercase letter</li>
                <li>At least 1 digit</li>
                <li>At least 1 special character</li>
            </ul>
        </div>
        <form method="post">
            <input type="hidden" asp-for="Input.Code" />
            <input type="hidden" asp-for="Input.Email" />
            <div class="form-group">
                <label asp-for="Input.Password">New Password</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Confirm New Password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Reset Password</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 